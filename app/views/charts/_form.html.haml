= form_for @chart do |f|
  - if @chart.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chart.errors.count, "error")} prohibited this chart from being saved:"
      %ul
        - @chart.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :team_id
    = f.collection_select :team_id, current_user.teams, :id, :name, prompt: true
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
