= form_for [@chart, @issue] do |f|
  - if @issue.errors.any?
    #error_explanation
      %h2= "#{pluralize(@issue.errors.count, "error")} prohibited this issue from being saved:"
      %ul
        - @issue.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :open
    = f.number_field :open
    %p
      0 = CLOSED / 1 = OPEN
  .actions
    = f.submit 'Save'
